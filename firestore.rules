rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default to denying all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to manage their own user profile document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to manage their own identities
    match /users/{userId}/identities/{identityId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to manage their own emails
    match /users/{userId}/emails/{emailId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to manage their own passwords
    match /users/{userId}/passwords/{passwordId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
