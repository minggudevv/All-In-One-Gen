
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Match any document in the 'users' collection
    match /users/{userId} {
      // Allow a user to read their own document
      // Allow a user to create their own document (signup)
      // Allow a user to update their own document (e.g. change username)
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      
      // Disallow deleting user profile documents
      allow delete: if false;

      // Identities subcollection
      match /identities/{identityId} {
        // Allow full access (create, read, update, delete) only for the owner
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Emails subcollection
      match /emails/{emailId} {
        // Allow full access only for the owner
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Passwords subcollection
      match /passwords/{passwordId} {
        // Allow full access only for the owner
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Credentials subcollection
      match /credentials/{credentialId} {
        // Allow full access only for the owner
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
